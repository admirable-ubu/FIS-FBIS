{% extends "base.html.j2" %}

{% block content %}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">Gestionar las medidas de {{name}}</h3>
        </div>
    </div>
    
    <div class="row">        
        <div class="{% if medidas %}col-md-2 offset-md-3{% else %}col-md-6 offset-md-3{% endif %} mt-5">
            <div class="d-flex align-items-center">
                <a type="button" class="btn btn-success btn-lg m-auto" href="{{ url_for('core.statics_add', patient=idu) }}">Añadir medidas</a>
            </div>
        </div>
        {% if medidas %}
            <div class="col-md-2 mt-5">
                <div class="d-flex align-items-center">
                    <a type="button" class="btn btn-warning btn-lg m-auto" href="{{ url_for('core.statics_modify', patient=idu) }}">Modificar medidas</a>
                </div>
            </div>
            <div class="col-md-2 mt-5">
                <div class="d-flex align-items-center">
                    <a type="button" class="btn btn-info btn-lg m-auto" href="{{url_for("core.show_statics", patient=idu)}}">Ver evolución</a>
                </div>
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}