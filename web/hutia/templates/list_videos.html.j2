{% extends "base.html.j2" %}

{% block content %}
<div class="jumbotron">
    <fieldset>
        <form class="form-horizontal" method="POST">
            <div class="row">
                <h3 class="col-md-12 text-center">Seleccione la máquina de la que quiera ver los vídeos</h3>
            </div>
            <div class="row">
                <div class="control-group mt-3 offset-md-5 col-md-2">
                    <select class="custom-select" name="file">
                        {% for f in ficheros %}
                            <option value="{{f}}">FIS HUBU {{f}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>    
            <div class="row">
                <div class="control-group mt-3 offset-md-5 col-md-2 d-flex">
                    <button type="submit" class="btn btn-primary m-auto">Ver vídeos</button>
                </div>
            </div>
        </form>
    </fieldset>
</div>

{% endblock %}