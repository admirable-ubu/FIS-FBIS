{% extends "base.html.j2" %}

{% block content %}

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="{{ url_for('static', filename='img/sacyl.png') }}" style="height: 4rem;">
            </div>
            <div class="col-1">
                <img src="{{ url_for('static', filename='img/fundacion.png') }}" style="height: 4rem;">
            </div>
            <div class="col-6">
            </div>
            <div class="col-2">
                <img src="{{ url_for('static', filename='img/Escudo Color TC.png') }}" style="height: 4rem;">
            </div>
            <div class="col-1">
                <img src="{{ url_for('static', filename='img/admirable.png') }}" style="height: 4rem;">
            </div>
        </div>
        {% for category, message in get_flashed_messages(with_categories=True) %}
        <div class="alert alert-{{ category }} alert-dismissible fade show mt-5 mb-2" role="alert">{{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}
        <div class="row">
            <fieldset class="col-6 offset-3">
                <form class="form-horizontal" method="POST">
                    <h3 class="text-center">Iniciar sesi√≥n</h3>
                    {{ form.hidden_tag()}}
                    <div class="control-group">
                        {{form.identity.label(class="control")}}
                        {{form.identity(class="form-control")}}<br>
                    </div>
                    <div class="control-group">
                        {{form.password.label(class="form-group")}}
                        {{form.password(class="form-control")}}<br>
                    </div>
                    <div class="control-group">
                        {{form.submit(class="btn btn-primary")}}
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>

{% endblock %}

{% block volver %}{% endblock %}